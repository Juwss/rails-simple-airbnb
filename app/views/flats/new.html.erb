<h1>Design your new flat</h1>
<%= form_with model: @flat do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :address %>
  <%= form.text_field :address %>
  <%= form.label :description %>
  <%= form.text_area :description, size: "60x10" %>
  <%= form.label :number_of_guests %>
  <%= form.number_field :number_of_guests %>
  <%= form.label :price_per_night %>
  <%= form.text_field :price_per_night %>
  <%= form.submit %>
<% end %>
